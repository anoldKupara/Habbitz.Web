@model IEnumerable<Vaccine>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Vaccines List</h2>
        </div>
        <div class="col-6 text-end">
            <button class="btn btn-outline-success mb-2" style="color:#cc1212">  <i class="fa fa-plus fa-2x" aria-hidden="true"></i> @Html.ActionLink("Add Vaccine", "Create")</button>
        </div>
    </div>
    <br />
    <table class="table table-bordered table-stripped" style="width:100p%">
        <thead>
            <tr>
                <th>
                    Vaccine Id
                </th>
                <th>
                    Vaccine Name
                </th>
                <th>
                    Description
                </th>
                <th>
                    Purpose
                </th>
                <th>
                    Alternative
                </th>
                <th>
                    Expiry Date
                </th>
                <th>
                    Purchase Date
                </th>
                <th>
                    Quantity
                </th>
                <th>
                    Amount
                </th>
                <th>
                    Currency
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var vaccine in Model)
            {
                <tr>
                    <td>
                        @vaccine.Id
                    </td>
                    <td>
                        @vaccine.Name
                    </td>
                    <td>
                        @vaccine.Description
                    </td>
                    <td>
                        @vaccine.Purpose
                    </td>
                    <td>
                        @vaccine.Alternative
                    </td>
                    <td>
                        @vaccine.ExpiryDate
                    </td>
                    <td>
                        @vaccine.PurchaseDate
                    </td>
                    <td>
                        @vaccine.Quantity
                    </td>
                    <td>
                        @vaccine.Amount
                    </td>
                    <td>
                        @vaccine.Currency
                    </td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Vaccine" asp-action="Edit" asp-route-id="@vaccine.Id"
                           class="btn btn-primary mx-2"><i class="bi bi-pencil-square"></i>Edit</a>
                            <a asp-controller="Vaccine" asp-action="Delete" asp-route-id="@vaccine.Id"
                           class="btn btn-danger mx-2"><i class="bi bi-trash-fill"></i>Delete</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
