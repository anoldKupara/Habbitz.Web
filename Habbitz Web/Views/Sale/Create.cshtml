@model Sale

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2>Create Sale</h2>
            <hr />
        </div>
        <div asp-validation-summary="All"></div>
        <div class="mb-3">
            <label asp-for="ItemPurchased">Item Purchased</label>
            <input asp-for="ItemPurchased" class="form-control" />
        </div>
                <div class="mb-3">
            <label asp-for="Quantity">Quantity</label>
            <input asp-for="Quantity" class="form-control" />
        </div>
                <div class="mb-3">
            <label asp-for="Price">Price</label>
            <input asp-for="Price" class="form-control" />
        </div>        
        <div class="mb-3">
            <label asp-for="PaymentMethod">Payment Method</label>
            <input asp-for="PaymentMethod" class="form-control" />
        </div>
                <button type="submit" class="btn btn-primary" style="width:150px">Create</button>
        <a asp-controller="Sale" asp-action="Index" class="btn btn-secondary" style="150px">Back to List</a>
    </div>
</form>