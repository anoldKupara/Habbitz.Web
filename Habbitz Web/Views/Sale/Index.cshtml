@model IEnumerable<Sale>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Sales List</h2>
        </div>
        <div class="col-6 text-end">
            <button class="btn btn-outline-success mb-2" style="color:#cc1212">  <i class="fa fa-plus fa-2x" aria-hidden="true"></i> @Html.ActionLink("Add Sale", "Create")</button>
        </div>
    </div>
    <br />
    <table class="table table-bordered table-stripped" style="width:100p%">
        <thead>
            <tr>
                <th>
                    Sale ID
                </th>
                <th>
                    Item Purchased
                </th>
                <th>
                    Quantity
                </th>
                <th>
                    Price
                </th>
                <th>
                    Payment Method
                </th>
                <th>
                    Date of Sale
                </th>
                <th>Actions </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var sale in Model)
            {
                <tr>
                    <td>
                        @sale.Id
                    </td>
                    <td>
                        @sale.ItemPurchased
                    </td>
                    <td>
                        @sale.Quantity
                    </td>
                    <td>
                        @sale.Price
                    </td>
                    <td>
                        @sale.PaymentMethod
                    </td>
                    <td>
                        @sale.DateOfPurchase
                    </td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Sale" asp-action="Edit" asp-route-id="@sale.Id"
                           class="btn btn-primary mx-2"><i class="bi bi-pencil-square"></i>Edit</a>
                            <a asp-controller="Sale" asp-action="Delete" asp-route-id="@sale.Id"
                           class="btn btn-danger mx-2"><i class="bi bi-trash-fill"></i>Delete</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
